# Google OAuth 2.0 Configuration
# Obtener desde Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Application Configuration
REDIRECT_URI=http://localhost:8501
APP_SECRET_KEY=your_secret_key_here_generate_a_random_string

# UTEM Configuration
UTEM_DOMAIN=utem.cl
CANVAS_BASE_URL=https://canvas.utem.cl

# Database Configuration (opcional, por defecto usa JSON local)
DATABASE_TYPE=json
DATABASE_PATH=./users.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development Settings
DEBUG=False
ENVIRONMENT=production

# Session Configuration
SESSION_TIMEOUT=3600

# Email Configuration (opcional para notificaciones)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@utem.cl

# Feature Flags
ENABLE_USER_REGISTRATION=True
ENABLE_EMAIL_VERIFICATION=False
ENABLE_PASSWORD_RESET=False